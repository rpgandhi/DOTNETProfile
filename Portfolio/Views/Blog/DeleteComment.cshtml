@model Portfolio.Models.Comment

<html>
  <head>
      <title>Post Comment - Delete</title>
  </head>
  <body>
    <h2>Are you sure you want to delete this?</h2>
    <hr />
    @Html.DisplayNameFor(model => model.Author): @Html.DisplayFor(model => model.Author)
    @Html.DisplayNameFor(model => model.CommentContent): @Html.DisplayFor(model => model.CommentContent)
    @using (Html.BeginForm("CommentDelete", "Blog"))
    {
        @Html.HiddenFor(model => model.CommentId)
        <input type="submit" value="Delete" />
    }
    @Html.ActionLink("Back to blog", "Index")     
  </body>
</html>      